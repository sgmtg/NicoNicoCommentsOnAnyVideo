{
    "name": "NicoNicoCommentsOnAnyVideo",
    "description": "任意の動画を任意のニコニコ動画のコメントと一緒に見れる拡張機能です。",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "runtime"
    ],
    "host_permissions":[
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}